@model BusinessLayer.Stadium

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Stadium</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <th>Name: </th>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            <th>Capacity: </th>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class = "col-sm-2">
            <th>City: </th>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TownName)
        </dd>
        <dt class = "col-sm-2">
            <th>Country: </th>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CountryCodeNavigation.CountryCode)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" , class="btn btn-warning">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
