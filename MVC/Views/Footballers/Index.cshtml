@model IEnumerable<BusinessLayer.Footballer>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-dark mb-4">⚽ Footballers</h1>
<p>
    <a href="@Url.Action("Create", "Footballers")"
       class="btn btn-warning btn-lg mb-3">
        <i class="fa fa-plus"></i> Add New Footballer
    </a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th>Position</th>
        <th>Country</th>
        <th>Team</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Age</td>
                <td>@item.TeamPosition</td>
                <td>@item.CountryCode</td>
                <td>@item.Team</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" , class="btn btn-warning">Edit</a> |


                    <a asp-action="Details" asp-route-id="@item.Id" , class="btn btn-info">Details</a> |

                    <a asp-action="Delete" asp-route-id="@item.Id" , class="btn btn-danger">Delete</a>

                 </td>
            </tr>
        }
    </tbody>
</table>
