@model IEnumerable<BusinessLayer.Footballer>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-dark mb-4">⚽ Footballers</h2>
<p>
    <a asp-action="Create">Add new Footballer</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th>Position</th>
        <th>Country</th>
        <th>Team</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Age</td>
                <td>@item.TeamPosition</td>
                <td>@item.CountryCode</td>
                <td>@item.Team?.Name</td>
            </tr>

        <td>
            @Html.ActionLink("Edit ", "Edit", new { id = item.Id },
            new { @class = "btn btn-warning btn-sm fa fa-edit", title = "Edit" })

        @Html.ActionLink("Details ", "Details", new { id = item.Id },
                new { @class = "btn btn-info btn-sm fa fa-eye", title = "Details" })

        @Html.ActionLink("Delete ", "Delete", new { id = item.Id },
                new { @class = "btn btn-danger btn-sm fa fa-trash", title = "Delete" })
         </td>
        }
    </tbody>
</table>
